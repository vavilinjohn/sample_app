<div class="user_info">
  <a href="<%= user_path(get_current_user) %>">
    <%= gravatar_for get_current_user, :size => 30 %>
    <span class="user_name">
      <%= get_current_user.name %>
    </span>
    <span class="microposts">
      <%= pluralize(get_current_user.microposts.count, "micropost") %>
    </span>
  </a>
</div>
